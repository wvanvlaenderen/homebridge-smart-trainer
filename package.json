{
  "name": "homebridge-smart-trainer",
  "version": "1.0.0",
  "description": "Smart trainer support",
  "license": "MIT",
  "keywords": [
    "wahoo",
    "kickr",
    "tacx",
    "homebridge-plugin",
    "homebridge"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/wvanvlaenderen/homebridge-smart-trainer.git"
  },
  "bugs": {
    "url": "https://github.com/wvanvlaenderen/homebridge-smart-trainer/issues"
  },
  "engines": {
    "node": ">=11.0.0",
    "homebridge": ">=1.0.0"
  },
  "main": "dist/sensor.js",
  "files": [
    "LICENSE",
    "dist"
  ],
  "dependencies": {
    "@types/node": "^13.13.4",
    "rxjs": "^6.5.5",
    "noble-mac": "https://github.com/Timeular/noble-mac.git",
    "xpc-connection": "sandeepmistry/node-xpc-connection#pull/26/head",
    "typescript": "^3.8.3",
    "xpc-connect": "^2.0.0"
  },
  "devDependencies": {
    "@types/noble-mac": "0.0.2",
    "homebridge": "^1.1.0",
    "noble": "^1.9.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "rimraf ./dist && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "test": "tslint -p tsconfig.json && npm run build",
    "lint": "tslint -p tsconfig.json --fix",
    "prepare": "npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "postpublish": "npm run clean"
  }
}
